extends ./layout.jade
block script
  script(src='shared/app.js')
block body
  svg(width="0" height="0")
    clipPath(id='angularClipPolygon')
      polygon(points="100 0, 122 0, 172 50, 178 72, 164 90, 62 96, 6 106, 2 170, 0 78, 0 10")
  .menu
    button.btn.btn-default(on-click='compare()') Compare
    button.btn.btn-default(on-click='asd()') Compare2
  .main.shared
    h1.title Tags input code comparison
    .main-table
      .row
        .col-lg-6
          .row
            img.angular.scale(src='angular1.png')
          .row.text
            h4 AngularJS
          .row.text
            a(name='angular', on-click='compareAction()')
              h6(switch-hide) Add to compare
              h6(switch-hide).hide Remove from compare
            a(href='angular/')
              h6 Live demo

        .col-lg-6
          .row.angular-rxjs
            .container
              img.angular1.back(src='angular1.png')
              img.rxjs.back(src='rxjs.png')
              img.rxjs.front(src='rxjs.png')
          .row.text
            h4 AngularJS + RxJS
          .row.text
            a(name='angular-rx', on-click='compareAction()')
              h6(switch-hide) Add to compare
              h6(switch-hide).hide Remove from compare
            a(href='angular-rx/')
              h6 Live demo

      .row
        .col-lg-6
          .row
            img.angular(src='angular2.png')
          .row.text
            h4 Angular 2 with ES6
          .row.text
            a(name='angular2', on-click='compareAction()')
              h6(switch-hide) Add to compare
              h6(switch-hide).hide Remove from compare
            a(href='angular2/')
              h6 Live demo

        .col-lg-6
          .row
            img.angular(src='angular2.png')
          .row.text
            h4 Angular 2 with TypeScript
          .row.text
            a(name='angular2-ts', on-click='compareAction()')
              h6(switch-hide) Add to compare
              h6(switch-hide).hide Remove from compare
            a(href='angular2-ts/')
              h6 Live demo
